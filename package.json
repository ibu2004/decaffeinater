{
  "name": "decaffeinater",
  "description": "An app which closes apps if you use them too much.",
  "version": "1.2.0",
  "main": "app/main.js",
  "dependencies": {
    "babel-polyfill": "^6.20.0",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "semantic-ui-react": "^0.64.0"
  },
  "scripts": {
    "build": "webpack --progress",
    "watch": "webpack -w --progress",
    "start": "npm run build && electron .",
    "nobuild": "electron .",
    "dist": "npm run build && electron-packager ./app --electron-version 1.4.14 --app-version 1.2.0 --overwrite --out dist",
    "make-exe": "node build/build.js",
    "make-deb": "npm run dist && electron-installer-debian --json build/installer-debian.json --src dist/decaffeinater-linux-x64 --dest dist/installers/ --arch amd64",
    "test": "mocha --require babel-register"
  },
  "devDependencies": {
    "@types/babel-core": "^6.7.14",
    "@types/chai": "^3.4.34",
    "@types/electron": "^1.4.31",
    "@types/electron-builder": "^2.0.29",
    "@types/mocha": "^2.2.37",
    "@types/react": "^15.0.0",
    "@types/react-dom": "^0.14.20",
    "@types/webpack": "^2.2.0",
    "babel-core": "^6.21.0",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.2.10",
    "babel-preset-babili": "^0.0.10",
    "babel-preset-env": "^1.1.8",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-0": "^6.16.0",
    "babel-register": "^6.18.0",
    "chai": "^3.5.0",
    "copy-webpack-plugin": "^4.0.1",
    "devtron": "^1.4.0",
    "electron": "^1.4.14",
    "electron-builder": "^11.2.4",
    "electron-installer-debian": "^0.4.0",
    "electron-packager": "^8.5.0",
    "electron-winstaller": "^2.5.1",
    "eslint": "^3.13.1",
    "eslint-config-airbnb": "^14.0.0",
    "eslint-plugin-flowtype": "^2.29.2",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^3.0.2",
    "eslint-plugin-react": "^6.9.0",
    "flow-bin": "^0.37.4",
    "mocha": "^3.2.0",
    "webpack": "2.2.0-rc.7"
  },
  "build": {
    "appId": "com.decaffeinater",
    "mac": {
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": "deb",
      "synopsis": "An app which closes apps if you use them too much.",
      "category": "Utility",
      "desktop": "build/decaffeinater.desktop"
    }
  }
}
