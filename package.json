{
  "name": "decaffeinater",
  "description": "An app which closes apps if you use them too much.",
  "version": "1.3.0-rc.1",
  "author": "Ibrahim Ansari <ansari.ibrahim1@gmail.com>",
  "main": "src/main.js",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git://github.com/ibujs/decaffeinater.git"
  },
  "scripts": {
    "start": "electron .",
    "debug": "electron . --inspect=9222 --remote-debugging-port=9229",
    "dist": "build",
    "build": "electron-packager . Decaffeinater --ignore \"/(.*|*.yml|*.js)/\" --asar --out=dist",
    "build-win": "npm run build --- --icon build/icon.ico",
    "build-mac": "npm run build --- --icon build/icon.icns",
    "make-exe": "npm run build-win && node build/winBuild.js",
    "make-dmg": "npm run build-mac && node build/macBuild.js",
    "pack": "build --dir",
    "test": "mocha --require babel-register"
  },
  "dependencies": {
    "babel-polyfill": "^6.23.0",
    "electron": "^1.7.1",
    "material-ui": "1.0.0-alpha.16",
    "react": "^15.5.4",
    "react-dom": "^15.5.4"
  },
  "devDependencies": {
    "@types/chai": "^4.0.0",
    "@types/mocha": "^2.2.41",
    "@types/react": "^15.0.26",
    "@types/react-dom": "^15.5.0",
    "babel-eslint": "^7.2.3",
    "babel-preset-babili": "^0.1.2",
    "babel-preset-react": "^6.24.1",
    "babel-register": "^6.24.1",
    "chai": "^4.0.1",
    "devtron": "^1.4.0",
    "electron-builder": "^13.9.0",
    "electron-devtools-installer": "^2.2.0",
    "electron-installer-dmg": "^0.2.1",
    "electron-installer-linux": "^1.0.1",
    "electron-packager": "^8.7.0",
    "electron-prebuilt-compile": "^1.7.1",
    "electron-winstaller": "^2.5.2",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^15.0.1",
    "eslint-plugin-flowtype": "^2.34.0",
    "eslint-plugin-import": "^2.3.0",
    "eslint-plugin-jsx-a11y": "^5.0.3",
    "eslint-plugin-react": "^7.0.1",
    "flow-bin": "^0.47.0",
    "mocha": "^3.4.2"
  },
  "optionalDependencies": {},
  "build": {
    "appId": "com.decaffeinater",
    "mac": {
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": "deb",
      "synopsis": "An app which closes apps if you use them too much.",
      "category": "Utility",
      "desktop": "build/decaffeinater.desktop"
    }
  }
}
